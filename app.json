{
  "expo": {
    "name": "wpm-hud",
    "slug": "wpm-hud",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#2a2a2a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.murphyguy.wpmhud"
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Please allow microphone access to use speech recognition",
          "speechRecognitionPermission": "Please allow speech recognition access so we can measure your reading speed. Nothing is saved or collected."
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2a2a2a"
      },
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.murphyguy.wpmhud"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "b8fdf438-5384-4b94-ba10-ec93e4aeadfb"
      }
    }
  }
}
